<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CLK.MauiCoreLab.MobileApp"
             xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.Web;assembly=Microsoft.AspNetCore.Components.Web"         
             xmlns:blazorCore="clr-namespace:CLK.MauiCoreLab.Pages;assembly=CLK.MauiCoreLab.Pages"         
             x:Class="CLK.MauiCoreLab.MobileApp.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type local:Components.Routes}" />
            <RootComponent Selector="head::after" ComponentType="{x:Type blazor:HeadOutlet}" />
            <RootComponent Selector="#script" ComponentType="{x:Type blazorCore:PageScriptOutlet}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
